PORT=4000
CLIENT_ORIGIN=http://localhost:5173

# Postgres (use DATABASE_URL or the individual DB_* fields)
DATABASE_URL=postgres://user:password@localhost:5432/rateflix
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rateflix
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_MAX=1
DB_IDLE_TIMEOUT=5000

JWT_SECRET=change_me_super_secret
RESET_CODE_SECRET=change_me_reset_secret
RESET_CODE_TTL_MINUTES=10
RESET_CODE_MAX_ATTEMPTS=5
EMAIL_PROVIDER=smtp

# SMTP (required for real email delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_ALLOW_INTERNAL_INTERFACES=true
SMTP_FORCE_IPV4=true
SMTP_DNS_CACHE_MS=300000
SMTP_CONNECTION_TIMEOUT_MS=15000
SMTP_GREETING_TIMEOUT_MS=10000
SMTP_SOCKET_TIMEOUT_MS=20000
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=RATEFLIX <your_email@gmail.com>

# Resend API (recommended on platforms where SMTP ports are blocked)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
RESEND_FROM=RATEFLIX <onboarding@resend.dev>
RESEND_TIMEOUT_MS=15000

TMDB_API_KEY=your_tmdb_api_key
